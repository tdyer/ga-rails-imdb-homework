<h1>Movies you'll love</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Date</th>
      <th>Rating</th>
      <th>Length</th>
      <th>Director</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= link_to movie.name, movie %></td>
        <td><%= truncate(movie.description, length: 20) %></td>
        <td><%= movie.date %></td>
        <td><%= movie.rating %> stars</td>
        <td><%= movie.length %> min</td>
        <td><%= link_to movie.director.name, movie.director %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Delete', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

